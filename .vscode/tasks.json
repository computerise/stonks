{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run coverage",
            "type": "shell",
            "command": "coverage run -m pytest test/",
            "problemMatcher": [],
            "group": {
                "kind": "test",
            }
        },
        {
            "label": "Update coverage gutters",
            "type": "shell",
            "command": "pytest --cov=. test/ --cov-report xml:cov.xml",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
